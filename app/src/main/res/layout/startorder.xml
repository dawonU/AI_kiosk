<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button_rounded1"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_roundedsquare"
            android:text="먹고가기"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_rounded2"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_roundedsquare"
            android:text="포장하기"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/imgBtn_Kr"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:background="@drawable/btn_circle"
            app:srcCompat="@drawable/imgbtn_kr"
            android:contentDescription="한글 버튼"/>

        <ImageButton
            android:id="@+id/imgBtn_Eng"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:background="@drawable/btn_circle"
        app:srcCompat="@drawable/imgbtn_en"
        android:contentDescription="영어 버튼" />

        <ImageButton
            android:id="@+id/imgBtn_Jp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:background="@drawable/btn_circle"
            app:srcCompat="@drawable/imgbtn_jp"
            android:contentDescription="일본어 버튼" />

        <ImageButton
            android:id="@+id/imgBtn_Ch"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:background="@drawable/btn_circle"
            app:srcCompat="@drawable/imgbtn_ch"
            android:contentDescription="중국어 버튼" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
